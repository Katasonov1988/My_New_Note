<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNewNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleOfNoteIdAndColor">
        <item name="android:textColor">#6B2B2D31</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular400</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="StyleOfNoteHeaderAndDescription">
        <item name="android:textColor">#222530</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="BackgroundHint">
        <item name="android:fontFamily">@font/source_sans_pro_regular400</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#80222530</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="BackgroundLinearLayout">
        <item name="android:orientation">vertical</item>
    </style>
</resources>