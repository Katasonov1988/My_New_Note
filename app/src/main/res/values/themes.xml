<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNewNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">#757575</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="statusBarBackground">@color/white</item>

        <item name="colorAccent">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.MyNewNote">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">#575962</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>



    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/darker_gray</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#004EF8</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#004EF8</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="StyleOfNoteIdAndColor">
        <item name="android:textColor">#6B2B2D31</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular400</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StyleOfNoteHeaderAndDescription">
        <item name="android:textColor">#222530</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="BackgroundHint">
        <item name="android:fontFamily">@font/source_sans_pro_regular400</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#80222530</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BackgroundLinearLayout">
        <item name="android:orientation">vertical</item>
    </style>
</resources>